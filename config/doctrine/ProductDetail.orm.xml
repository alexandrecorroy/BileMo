<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\ProductDetail" table="bilemo_product_detail">
        <id name="uid" column="uid" type="uuid"/>
        <field name="brand" length="56"/>
        <field name="color" length="32" />
        <field name="os" length="56" />
        <field name="memory" type="smallint" />
        <field name="weight" type="float" precision="5" scale="2"/>
        <field name="screenSize" type="float" precision="2" scale="1"/>
        <field name="height" type="float" precision="4" scale="1"/>
        <field name="width" type="float" precision="3" scale="1"/>
        <field name="thickness" type="float" precision="3" scale="1"/>
    </entity>
</doctrine-mapping>
