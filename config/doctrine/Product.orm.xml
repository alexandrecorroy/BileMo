<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\Product" table="bilemo_product" repository-class="App\Repository\ProductRepository">
        <id name="uid" column="id" type="uuid"/>
        <field name="name" length="56"/>
        <field name="price" type="decimal" precision="6" scale="2" />
        <one-to-one field="productDetail" target-entity="App\Entity\ProductDetail">
            <join-column name="product_id" referenced-column-name="id" />
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-one>
    </entity>
</doctrine-mapping>